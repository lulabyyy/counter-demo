# ========================
# Flutter / Dart base ignore
# ========================
.flutter-plugins
.flutter-plugins-dependencies
.packages
.pub/
.dart_tool/
build/
ios/
android/.gradle/
android/local.properties
macos/
windows/
linux/
web/.dart_tool/

# VSCode / Editor
.vscode/
.idea/
*.iml

# Logs
*.log

# OS Files
.DS_Store
Thumbs.db

# =============================
# Ignore EVERYTHING by default
# =============================
*

# =============================
# Allow only these files/folders
# =============================

# Allow gitignore itself
!.gitignore

# Allow main.dart
!lib/main.dart

# Allow pubspec
!pubspec.yaml
!pubspec.lock

# Allow assets folder (optional)
!assets/
!assets/**/*
